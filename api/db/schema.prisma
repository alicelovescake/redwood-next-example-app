datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Wizard {
  id        String           @id @default(uuid())
  firstName String           @unique
  lastName  String
  classes   WizardsClasses[]
  house     House?           @relation(fields: [houseId], references: [id])
  houseId   String?
}

model House {
  id           String   @id @default(uuid())
  name         String
  houseColours String
  animal       String
  founder      String
  ghost        String
  element      String
  wizards      Wizard[]
}

model Classroom {
  id          String           @id @default(uuid())
  name        String
  wizards     WizardsClasses[]
  spells      Spell[]
  ingredients Ingredients[]
}

model WizardsClasses {
  wizard      Wizard?    @relation(fields: [wizardId], references: [id])
  wizardId    String
  classroom   Classroom? @relation(fields: [classroomId], references: [id])
  classroomId String

  @@id([wizardId, classroomId])
}

model Spell {
  id          String     @id @default(uuid())
  name        String
  incantation String
  effect      String
  light       String
  type        String
  classroom   Classroom? @relation(fields: [classroomId], references: [id])
  classroomId String?
}

model Ingredients {
  id          String     @id @default(uuid())
  name        String
  classroom   Classroom? @relation(fields: [classroomId], references: [id])
  classroomId String?
}
