datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Wizard {
  id        String           @id @default(uuid())
  firstName String           @unique
  lastName  String
  classes   WizardsClasses[]
  house     House?           @relation(fields: [houseId], references: [id])
  houseId   String?
}

model House {
  id           String   @id @default(uuid())
  name         String
  houseColours String
  animal       String
  founder      String
  ghost        String
  element      String
  wizards      Wizard[]
}

model Class {
  id          String           @id @default(uuid())
  wizards     WizardsClasses[]
  spells      Spell[]
  ingredients Ingredients[]
}

model WizardsClasses {
  wizard   Wizard? @relation(fields: [wizardId], references: [id])
  wizardId String
  class    Class?  @relation(fields: [classId], references: [id])
  classId  String

  @@id([wizardId, classId])
}

model Spell {
  id          String  @id @default(uuid())
  name        String
  incantation String
  effect      String
  light       String
  type        String
  class       Class?  @relation(fields: [classId], references: [id])
  classId     String?
}

model Ingredients {
  id      String  @id @default(uuid())
  name    String
  class   Class?  @relation(fields: [classId], references: [id])
  classId String?
}
